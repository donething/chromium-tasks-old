{
  "name": "Chromium Tasks",
  "description": "执行定时任务",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icons/extension_16.png",
    "32": "icons/extension_32.png",
    "48": "icons/extension_48.png",
    "128": "icons/extension_128.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "alarms",
    "cookies"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "/static/js/service_worker.js"
  },
  "action": {
    "default_popup": "/index.html#popup",
    "default_title": "Open the popup"
  }
}